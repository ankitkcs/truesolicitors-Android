<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/margin_5dp"
    android:paddingRight="@dimen/margin_5dp"
    android:paddingTop="@dimen/margin_10dp"
    android:paddingBottom="@dimen/margin_10dp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/faqquestion_txtFaqQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/faq_imgRightArrow"
        android:padding="@dimen/margin_5dp"
        android:paddingRight="@dimen/margin_15dp"
        android:text="Faq_Answer"
        android:textColor="@color/color_black"
        android:textSize="@dimen/font_18dp" />

    <ImageView
        android:id="@+id/faq_imgRightArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/margin_10dp"
        android:paddingRight="@dimen/margin_10dp"
        android:src="@drawable/right_arrow_red_icon" />

</RelativeLayout>