<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/moredetail_contact_scview"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/android_background"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/moredetail_imageLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
  
            android:src="@drawable/ic_true_contact" />

        <TextView
            android:id="@+id/moredetail_contactnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/moredetail_imageLogo"
            android:layout_alignRight="@+id/moredetail_imageLogo"
            android:layout_below="@+id/moredetail_imageLogo"
          
            android:gravity="center"
            android:text="0844 854 7000"
            android:textColor="@color/color_lightred"
            android:textSize="@dimen/font_16dp" />

        <View
            android:id="@+id/moredetail_viewsepratorcontact"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/moredetail_contactnumber"
            android:layout_marginTop="@dimen/margin_10dp"
            android:background="@color/color_greyseprator" />

        <LinearLayout
            android:id="@+id/moredetail_linearContactOpt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/moredetail_viewsepratorcontact"
            android:orientation="horizontal" >

            <RelativeLayout android:id="@+id/moredetail_contentCall"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/color_white"
                android:gravity="center"
                android:padding="@dimen/margin_5dp" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_phone_icon" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_toRightOf="@+id/imageView1"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/margin_5dp"
                    android:paddingRight="@dimen/margin_5dp"
                    android:text="@string/more_contact_callTrue"
                    android:textColor="@color/color_lightred"
                    android:textSize="@dimen/font_16dp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center" >

                <View
                    android:layout_width="@dimen/margin_1dp"
                    android:layout_height="match_parent"
                    android:background="@color/color_greyseprator" />

                <RelativeLayout android:id="@+id/moredetail_contactMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/color_white"
                    android:gravity="center"
                    android:padding="@dimen/margin_10dp" >

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_action_android_new_message_icon" />

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/imageView1"
                        android:paddingLeft="@dimen/margin_5dp"
                        android:text="@string/more_contact_newMessage"
                        android:textColor="@color/color_lightred"
                        android:textSize="@dimen/font_16dp"
                        android:textStyle="bold" />

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/moredetail_linearContactOpt"
            android:background="@color/color_greyseprator" />

        <TextView
            android:id="@+id/moredetail_txtcontactdesc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/view1"
            android:padding="@dimen/margin_10dp"
            android:textSize="@dimen/font_13dp" />
    </RelativeLayout>

</ScrollView>