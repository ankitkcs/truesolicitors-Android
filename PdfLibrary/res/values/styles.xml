<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="common_header_font_style">
        <item name="android:textSize">@dimen/font_22dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="common_button_font_style">
        <item name="android:textSize">@dimen/font_15dp</item>
        <item name="android:paddingLeft">@dimen/margin_10dp</item>
        <item name="android:paddingRight">@dimen/margin_10dp</item>
        <item name="android:paddingTop">@dimen/margin_5dp</item>
        <item name="android:paddingBottom">@dimen/margin_5dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="myBackgroundStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="Kcs_Dialog_Text">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#f7f9fb</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">3px</item>
        <item name="android:textSize">14sp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="textview_singleline">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>